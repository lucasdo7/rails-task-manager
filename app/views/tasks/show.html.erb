<h1>Info of Task</h1>

<p><%= @task.title %></p>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Back to tasks", tasks_path, class: "btn btn-primary" %>


<%= link_to "Update", edit_task_path, class: "btn btn-primary" %>

<%= link_to "Delete", task_path(@task), class: "btn btn-danger",
data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
