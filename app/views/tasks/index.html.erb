<div class="container">
  <br><h1>My tasksðŸ“ƒ</h1><br>
    <%= link_to task_new_path do %>
      <i class="fa-solid fa-plus"></i><span class="badge rounded-pill bg-primary">Create a task</span>
    <% end %> <hr>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed? %>
          <i class="fa-solid fa-square-check"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do %>
          <i class="fa-regular fa-trash-can"></i>
          <% end %>
      </li>
    <% end %>
  </ul>
  <hr>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tasks</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">1</th>
        <td>Mark</td>
      </tr>
      <tr>
        <th scope="row">2</th>
        <td>Jacob</td>
      </tr>
      <tr>
        <th scope="row">3</th>
        <td colspan="2">Larry the Bird</td>
      </tr>
    </tbody>
  </table>
</div>


