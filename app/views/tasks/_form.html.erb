<%= simple_form_for task do |d| %>
  <%= d.input :title, placeholder: 'washing the dishes' %>
  <%= d.input :details, placeholder: '1 hour do to this task' %>
  <%= d.input :completed, collection: ['true', 'false'], hint: 'True or false' %>
  <%= d.button :submit, class: "btn btn-primary" %> , <%= link_to "back to task", tasks_path, class: 'btn btn-danger' %>
<% end %>
